@model ProyectoP3Opta4.Models.Producto

@{
    ViewBag.Title = "Confirmar Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Confirmar Eliminación</h2>

    <p>¿Estás seguro de que quieres eliminar el producto <strong>@Model.nombre</strong>?</p>

    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Nombre del Producto</th>
                    <td>@Model.nombre</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>@Model.descripcion</td>
                </tr>
                <tr>
                    <th>Precio Unitario</th>
                    <td>@Model.precio_unitario</td>
                </tr>
                <tr>
                    <th>Categoría</th>
                    <td>@Model.categoria_nombre</td>
                </tr>
                <tr>
                    <th>Marca</th>
                    <td>@Model.marca_nombre</td>
                </tr>
                <tr>
                    <th>Proveedor</th>
                    <td>@Model.proveedor_nombre</td>
                </tr>
                <tr>
                    <th>Cantidad</th>
                    <td>@Model.cantidad</td>
                </tr>
                <tr>
                    <th>Almacén</th>
                    <td>@Model.almacen_nombre</td>
                </tr>
            </tbody>
        </table>
    </div>

    @using (Html.BeginForm("Eliminar", "Producto", new { id_producto = Model.id_producto }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="btn-container">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
</div>
