@{
    ViewBag.Title = "Home Page";
}


<style>
    .buttonLogin {
        border: none;
        color: #fff;
        margin: 1rem 0;
        font-size: 18px;
        padding: 0.5rem;
        cursor: pointer;
        font-weight: bold;
        border-radius: 5rem;
        background: linear-gradient(to right, blue, violet);
    }
</style>

<div style="display:flex; justify-content: center; align-items: center">

    @{
        if (Session["loggedUser"] != null)
        {

            var userName = Session["loggedUser"] as string;
            var capitalizedUserName = userName?.Substring(0, 1).ToUpper() + userName?.Substring(1);

            <h2>
                Bienvenido @capitalizedUserName
            </h2>





        }
        else
        {

            <h3 style="font-style:italic">
                Para acceder al sistema por favor inicia sesion.
            </h3>


            <!--
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" onclick="location.href='@Url.Action("Index", "Login")'" class="buttonLogin">Iniciar sesión</button>
                </div>
            </div>
                    -->


        }
    }
</div>

@{
    if (Session["loggedUser"] != null)
    {
        <div style="display: flex; width: 100%; height: 100%; border: 1px solid #ccc; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); flex-wrap:wrap; ">
            <div style="flex: 1; display: flex; flex-direction: column; justify-content: center; align-items: center; border-right: 1px solid #ccc; padding: 20px;">
                <h2>Mantenimiento</h2>
                <ul>
                    <li>@Html.ActionLink("Categorias", "Index", "Categoria", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Marcas", "Index", "Marcas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Almacenes", "Index", "Almacen", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div style="flex: 1; display: flex; flex-direction: column; justify-content: center; align-items: center; border-right: 1px solid #ccc; padding: 20px;">
                <h2>Movimiento</h2>
                <ul>
                    <li>@Html.ActionLink("Lista Proveedores", "Index", "Proveedores", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Lista Productos", "Index", "Producto", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["userType"].ToString() == "1")
                    {
                        <li>@Html.ActionLink("Administrar Empleados", "Index", "Empleado", new { area = "" }, new { @class = "nav-link" })</li>

                        <li>@Html.ActionLink("Administrar Roles", "Index", "Roles", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    }
}



