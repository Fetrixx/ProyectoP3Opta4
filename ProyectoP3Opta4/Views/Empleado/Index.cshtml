@model IEnumerable<ProyectoP3Opta4.Models.Empleado>

@{
    ViewBag.Title = "Listado de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Empleados</h2>

<form id="searchForm" action="@Url.Action("Index")" method="get">
    <label for="search">Buscar:</label>
    <input type="text" id="search" name="search" placeholder="Buscar empleado por nombre..." />
    <button type="submit" id="searchBtn">Buscar</button>
    <button type="button" id="refreshBtn">Actualizar lista</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID Empleado</th>
            <th>Nombre Completo</th>
            <th>Usuario</th>
            <th>Contraseña</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_empleado</td>
                <td>@item.nombre_completo</td>
                <td>@item.usuario</td>
                <td>@Html.Password("Contraseña", item.contrasena, new { @readonly = "readonly" })</td> <!-- Campo censurado -->
                <td>@item.id_nombre</td> <!-- Nombre del rol -->
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.id_empleado }, new { @class = "action-link" })
                    @Html.ActionLink("Eliminar", "ConfirmarEliminar", new { id = item.id_empleado }, new { @class = "action-link delete-link" })
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Nuevo")" class="action-link">Nuevo Empleado</a>

<script>
    document.getElementById('refreshBtn').addEventListener('click', function () {
        document.getElementById('search').value = '';
        document.getElementById('searchForm').submit();
    });
</script>

<style>
    /* Estilos CSS */
    body {
        font-family: Arial, sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-link {
        display: inline-block;
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .action-link:hover {
            background-color: #0056b3;
        }

    .delete-link {
        background-color: #dc3545;
    }

        .delete-link:hover {
            background-color: #c82333;
        }

    /* Formulario de búsqueda */
    #searchForm {
        margin-bottom: 20px;
    }

    #search {
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 10px;
        width: 300px;
    }

    #searchBtn, #refreshBtn {
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        #searchBtn:hover, #refreshBtn:hover {
            background-color: #0056b3;
        }
</style>
