@model ProyectoP3Opta4.Models.Empleado

@{
    ViewBag.Title = "Confirmar Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Confirmar Eliminación</h2>
    <p>¿Estás seguro de que quieres eliminar el empleado <strong>@Model.nombre_completo</strong>?</p>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Nombre Completo</th>
                    <td>@Model.nombre_completo</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>@Model.usuario</td>
                </tr>
                <tr>
                    <th>Contraseña</th>
                    <td>@Model.contrasena</td>
                </tr>
                <tr>
                    <th>Rol</th>
                    <td>@Model.id_rol</td>
                </tr>
            </tbody>
        </table>
    </div>
    @using (Html.BeginForm("EliminarConfirmado", "Empleado", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.id_empleado)
        <div class="btn-container">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Empleado")" class="btn btn-secondary">Cancelar</a>
        </div>
    }
</div>
