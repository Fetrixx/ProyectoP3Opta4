
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model ProyectoP3Opta4.Models.Proveedores
@{
    ViewBag.Title = "Nuevo Proveedor";
}

<div class="container">
    <h2>Nuevo Proveedor</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <h5>
                Nombre de la Empresa:
            </h5>
            @Html.TextBoxFor(model => model.NombreEmpresa, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h5>
                Nombre del Contacto:
            </h5>
            @Html.TextBoxFor(model => model.NombreContacto, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h5>
                Direccion:
            </h5>
            @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h5>
                Telefono:
            </h5>
            @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h5>
                Correo:
            </h5>
            @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("Index", "Proveedores")" class="btn btn-secondary">Cancelar</a>
    }
</div>